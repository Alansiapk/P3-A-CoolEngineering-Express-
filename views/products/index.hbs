{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Warranty</th>
            <th>Indoor Unit</th>
            <th>Outdoor Unit</th>
            <th>Date Created</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.brand.name}}
            </td>
            <td>
                {{this.category.name}}
            </td>

            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.warranty}}
            </td>
            <td>
                {{this.indoor_unit}}
            </td>
            <td>
                {{this.outdoor_unit}}
            </td>
            <td>
                {{this.date_created}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>

        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}