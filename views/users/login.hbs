{{#extends 'base'}}

{{#block 'content'}}
<h1>Login</h1>
<p>Please login with your account below!</p>
<p>If you don't have an account, please sign up <a href="/signup">here</a></p>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}" />

    {{{form}}}
    <input type="submit" class="btn btn-primary mt-3" value="Login" />
</form>

{{/block}}

{{/extends}}